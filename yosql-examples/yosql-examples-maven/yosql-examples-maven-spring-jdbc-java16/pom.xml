<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://maven.apache.org/POM/4.0.0"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- ordering follows https://maven.apache.org/developers/conventions/code.html#POM_Code_Convention -->

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!--                                 PARENT                                  -->
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!-- https://maven.apache.org/pom.html#Inheritance -->
    <parent>
        <groupId>wtf.metio.yosql.examples.maven</groupId>
        <artifactId>yosql-examples-maven</artifactId>
        <version>0.0.0-SNAPSHOT</version>
    </parent>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!--                               COORDINATES                               -->
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!-- https://maven.apache.org/pom.html#Maven_Coordinates -->
    <artifactId>yosql-examples-maven-spring-jdbc-java16</artifactId>

    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!--                               INFORMATIONS                              -->
    <!-- - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -->
    <!-- https://maven.apache.org/pom.html#More_Project_Information -->
    <name>YoSQL :: Examples :: Maven :: Spring-JDBC/Java16</name>

    <build>
        <plugins>
            <plugin>
                <groupId>wtf.metio.yosql.tooling</groupId>
                <artifactId>yosql-tooling-maven</artifactId>
                <configuration>
                    <files>
                        <skipLines>6</skipLines>
                    </files>
                    <java>
                        <apiVersion>16</apiVersion>
                    </java>
                    <repositories>
                        <basePackageName>wtf.metio.yosql.example.maven.springjdbc.java16.persistence</basePackageName>
                    </repositories>
                    <api>
                        <persistenceApi>SPRING_JDBC</persistenceApi>
                    </api>
                    <converter>
                        <converterPackageName>wtf.metio.yosql.example.maven.springjdbc.java16.persistence.converter</converterPackageName>
                        <rowConverters>
                            <rowConverter>
                                <alias>itemConverter</alias>
                                <converterType>wtf.metio.yosql.example.maven.springjdbc.java16.converter.ToItemConverter</converterType>
                                <methodName>asUserType</methodName>
                                <resultType>wtf.metio.yosql.example.maven.springjdbc.java16.model.Item</resultType>
                            </rowConverter>
                        </rowConverters>
                    </converter>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
